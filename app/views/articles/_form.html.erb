<%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  
  <div class='form-group'>
  	<div class='col-md-2'>
		  <%= f.label :title %>
		</div>
		<div class='col-md-8'>
		  <%= f.text_field :title, class: 'form-control', placeholder: "Enter article title" %>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-md-2'>
			<%= f.label :body %>
		</div>
		<div class='col-md-8'>
			<%= f.text_field :body, class: 'form-control', placeholder: "Enter article body" %>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-md-4'>
			<%= f.submit 'Create Article', class: 'btn btn-primary' %>
		</div>
	</div>

<% end %>